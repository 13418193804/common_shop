.member_info_container {
  height: 100vh;
  width: 100vw;
  position: relative;
  white-space: nowrap;
  text-align: center;

}

.member_card {
  background-image: url("https://midapi.aisishop.com/image/upload/20200426/file5ea4ef2e6881dc5f7c33038a.png");
  background-size: 100% 100%;
  height: 500rpx;
  width: 100vw;
}

.member_info_box {
  position: absolute;
  bottom: 15vh;
  width: 100vw;
}

.member_info {
  letter-spacing: 4rpx !important;
  line-height: 41rpx !important;
  font-size: 32rpx !important;
  background: none !important;
  padding: 25rpx 10rpx !important;
  color: #6A3F08 !important;
  width: 80vw !important;
  margin: 0 auto !important;
  background-color: #EDCC96 !important;
  border: 0 solid #EDCC96 !important;
}

.member_info::after {
  border: none !important;
}

.text_link {
  color: #EDCC96;
  text-decoration: underline
}

.mini_card {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 90vw;
  -webkit-box-shadow: 0 0 20rpx #ccc;
  box-shadow: 0 0 20rpx #ccc;
  border-radius: 8rpx;
  padding: 30rpx;
  line-height: 54rpx;
  margin: -100rpx auto;
  background-color: #fff;
}